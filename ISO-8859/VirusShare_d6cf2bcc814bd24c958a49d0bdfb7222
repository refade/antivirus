function validarcontacto(formulario) {   
    var er_nombre = /^([a-z]|[A-Z]|á|é|í|ó|ú|ñ|ü|\s|\.|-)+$/    //letras, '.' y '-' o vacio   
    var er_telefono = /^([0-9\s\+\-])+$/                  //numeros, espacios, + o -   
    //direccion de correo electronico   
    var er_email = /^(.+\@.+\..+)$/   
    var x     
   
           
    //comprueba campo de nombre   
    if(!er_nombre.test(document.forms[formulario].nom.value)) {    
        alert('Contenido del campo NOMBRE no válido.')   
        return false   
    }  
	
    //comprueba campos de telefonos (permite campos vacios y guiones)   
    if( !er_telefono.test(document.forms[formulario].tel.value) ) {   
        alert('Contenido del campo TELEFONO no válido.')   
        return false   
    }  
    if(document.forms[formulario].tel.value.length < 9) {    
        alert('Contenido del campo TELÉFONO no válido.')   
        return false   
    } 
	
	    //comprueba campo de email   
    if(!er_email.test(document.forms[formulario].ema.value)) {    
        alert('Contenido del campo E-MAIL no válido.')   
        return false   
    }  
	
    //comprueba campo de comentarios   
    if(document.forms[formulario].com.value.length < 1) {    
        alert('Contenido del campo COMENTARIOS no válido.')   
        return false   
    }
	
	
	if (confirm("Se van a ENVIAR los datos del formulario ¿Desea continuar?")) {
		document.forms[formulario].action = 'contactoprocesar.php';
		document.forms[formulario].submit();
	}
} 



function validarhaztesocio(formulario) {   
    var er_nombre = /^([a-z]|[A-Z]|á|é|í|ó|ú|ñ|ü|\s|\.|-)+$/    //letras, '.' y '-' o vacio   
    var er_telefono = /^([0-9\s\+\-])+$/                  //numeros, espacios, + o -   
    //direccion de correo electronico   
    var er_email = /^(.+\@.+\..+)$/   
    var x     
   
           
    //comprueba campo de nombre   
    if(!er_nombre.test(document.forms[formulario].SocioNombre.value)) {    
        alert('Contenido del campo NOMBRE no válido.')   
        return false   
    }  
    if(document.forms[formulario].SocioNombre.value.length < 2) {    
        alert('El contenido del campo NOMBRE es obligatorio.')   
        return false   
    } 

    //comprueba campo de apellidos   
    if(!er_nombre.test(document.forms[formulario].SocioApellidos.value)) {    
        alert('Contenido del campo APELLIDOS no válido.')   
        return false   
    }  
    if(document.forms[formulario].SocioApellidos.value.length < 3) {    
        alert('El contenido del campo APELLIDOS es obligatorio.')   
        return false   
    } 

    if(document.forms[formulario].SocioDireccion.value.length < 2) {    
        alert('El contenido del campo DIRECCIÓN es obligatorio.')   
        return false   
    } 


	 //comprueba campo de email   
    if(!er_email.test(document.forms[formulario].SocioEmail.value)) {    
        alert('Contenido del campo E-MAIL no válido.')   
        return false   
    }
    if(document.forms[formulario].SocioEmail.value.length < 2) {    
        alert('El contenido del campo EMAIL es obligatorio.')   
        return false   
    } 
	if((document.forms[formulario].SocioEmail.value)!=(document.forms[formulario].SocioEmail2.value)) {    
        alert('Compruebe la verificación de su email.')   
        return false   
    }

	
    if((document.forms[formulario].SocioTelefono.value.length < 2)&&(document.forms[formulario].SocioMovil.value.length < 2)) {    
        alert('Debe escribir al menos un número de teléfono')   
        return false   
    } 
	
    if(document.forms[formulario].textoCaptcha.value.length < 6) {    
        alert('Escriba el código de la imágen.')   
        return false   
    } 
	

	
	
	if (confirm("Se van a tramitar su preinscripción ¿Desea continuar?")) {
		document.forms[formulario].action = 'haztesocioprocesar.php';
		document.forms[formulario].submit();
	}
} 




function validaraltacliente(formulario) {  
    var er_nombre = /^([a-z]|[A-Z]|á|é|í|ó|ú|ñ|ü|\s|\.|-)+$/    //letras, '.' y '-' o vacio   
    var er_telefono = /^([0-9\s\+\-])+$/                  //numeros, espacios, + o -   
    var er_cp = /^([0-9\s])+$/                  //numeros, espacios, + o -   
    //direccion de correo electronico   
    var er_email = /^(.+\@.+\..+)$/   
    var x     
   
           
    //comprueba campo de nombre   
    if(!er_nombre.test(document.forms[formulario].ClienteNombre.value)) {    
        alert('Contenido del campo NOMBRE no válido.')   
        return false   
    }  
	
	if(document.forms[formulario].ClienteNif.value.length < 9) {    
        alert('Contenido del campo NIF no válido.')   
        return false   
    } 

	if(document.forms[formulario].ClienteContacto.value.length < 3) {    
        alert('Contenido del campo PERSONA DE CONTACTO no válido.')   
        return false   
    } 

    if(document.forms[formulario].ClienteDireccion.value.length < 2) {    
        alert('Contenido del campo DIRECCIÓN no válido.')   
        return false   
    } 
	
	if(!er_cp.test(document.forms[formulario].ClienteCP.value)) {    
        alert('Contenido del campo CÓDIGO POSTAL no válido. Escriba solo números.')   
        return false   
    }  

    if(document.forms[formulario].ClienteCP.value.length < 1) {    
        alert('Contenido del campo CÓDIGO POSTAL no válido.')   
        return false   
    } 
	
    if(document.forms[formulario].ClientePoblacion.value.length < 1) {    
        alert('Contenido del campo POBLACIÓN no válido.')   
        return false   
    } 
	
	if(document.forms[formulario].ClienteProvincia.value == '0') {    
        alert('Contenido del campo PROVINCIA no válido.')   
        return false   
    } 
	
    //comprueba campos de telefonos (permite campos vacios y guiones)   
    if( !er_telefono.test(document.forms[formulario].ClienteTelefono.value) ) {   
        alert('Contenido del campo TELEFONO no válido.')   
        return false   
    }  
    if(document.forms[formulario].ClienteTelefono.value.length < 9) {    
        alert('Contenido del campo TELÉFONO no válido.')   
        return false   
    } 
	
	    //comprueba campo de email   
    if(!er_email.test(document.forms[formulario].ClienteEmail.value)) {    
        alert('Contenido del campo E-MAIL no válido.')   
        return false   
    }  
	
	if(document.forms[formulario].ClientePassword.value.length < 4) {    
        alert('La CONTRASEÑA debe contener al menos 4 caracteres.')   
        return false   
    } 
	
	if(document.forms[formulario].ClientePassword.value != document.forms[formulario].ClientePassword2.value) {    
        alert('Revise la CONTRASEÑA, no coincide la validación.')   
        return false   
    } 
	
	if(!document.forms[formulario].AceptoCondiciones.checked) {    
        alert('Debe haber leido ya ceptado las condiciones de Privacidad y Tratamiento de sus datos personales antes de continuar.')   
        return false   
    } 
	
	if (confirm("Se van a ENVIAR los datos del formulario ¿Desea continuar?")) {
		document.forms[formulario].action = 'altaclienteprocesar.asp';
		document.forms[formulario].submit();
	}
} 














function validarinscripcion(formulario, numform) {   
    if(formulario.InscritoEvento.value == 0) {    
		formulario.InscritoEvento.focus();
		formulario.InscritoEvento.style.backgroundColor="#F9C5C5"
        alert('Debes seleccionar un EVENTO o CARRERA al que inscribirte.')   
        return false
	}
	else{
		formulario.InscritoEvento.style.backgroundColor="#F3F3F3"   
    }
  
    if(formulario.InscritoNombre.value.length < 2) {    
		formulario.InscritoNombre.focus();
		formulario.InscritoNombre.style.backgroundColor="#F9C5C5"
        alert('Debes escribir tu NOMBRE.')   
        return false
	}
	else{
		formulario.InscritoNombre.style.backgroundColor="#F3F3F3"   
    }


    if(formulario.InscritoApellidos.value.length < 5) {    
		formulario.InscritoApellidos.focus();
		formulario.InscritoApellidos.style.backgroundColor="#F9C5C5"
        alert('Debes escribir tus APELLIDOS.')   
        return false
	}
	else{
		formulario.InscritoApellidos.style.backgroundColor="#F3F3F3"   
    }


 	if (formulario.InscritoEmail.value.length > 0) {
  		if ((formulario.InscritoEmail.value.indexOf ('@', 0) == -1)||(formulario.InscritoEmail.value.length < 5)) { 
			formulario.InscritoEmail.focus();
			formulario.InscritoEmail.style.backgroundColor="#F9C5C5"
    		alert("Escriba una dirección de correo válida en el campo EMAIL."); 
			formulario.InscritoEmail.focus();
    		return (false); 
  	 }
	}
	else{
		formulario.InscritoEmail.style.backgroundColor="#F3F3F3"   
    }


    if(formulario.InscritoNif.value.length < 9) {    
		formulario.InscritoNif.focus();
		formulario.InscritoNif.style.backgroundColor="#F9C5C5"
        alert('Debes escribir tu DNI.')   
        return false
	}
	else{
		formulario.InscritoNif.style.backgroundColor="#F3F3F3"   
    }

    if((formulario.InscritoFecha.value.length < 10) || (formulario.InscritoFecha.value.length > 10)) {    
		formulario.InscritoFecha.focus();
		formulario.InscritoFecha.style.backgroundColor="#F9C5C5"
        alert('Debes escribir una FECHA DE NACIMIENTO válida. Formato dd/mm/aaa.')   
        return false
	}
	else{
		formulario.InscritoFecha.style.backgroundColor="#F3F3F3"   
    }

 	if (formulario.InscritoFecha.value.length > 0) {
  		if (formulario.InscritoFecha.value.indexOf ('/', 0) == -1) { 
			formulario.InscritoFecha.focus();
			formulario.InscritoFecha.style.backgroundColor="#F9C5C5"
        	alert('Debes escribir una FECHA DE NACIMIENTO válida. Formato dd/mm/aaa.')   
			formulario.InscritoFecha.focus();
    		return (false); 
  	 }
	}
	else{
		formulario.InscritoFecha.style.backgroundColor="#F3F3F3"   
    }

    if(formulario.InscritoSexo.value == 0) {    
		formulario.InscritoSexo.focus();
		formulario.InscritoSexo.style.backgroundColor="#F9C5C5"
        alert('Debes seleccionar si eres Hombre o Mujer.')   
        return false
	}
	else{
		formulario.InscritoEvento.style.backgroundColor="#F3F3F3"   
    }

    if(formulario.InscritoTalla.value == 0) {    
		formulario.InscritoTalla.focus();
		formulario.InscritoTalla.style.backgroundColor="#F9C5C5"
        alert('Debes seleccionar tu talla para facilitar la equipación en caso de haberla.')   
        return false
	}
	else{
		formulario.InscritoEvento.style.backgroundColor="#F3F3F3"   
    }

	
	if(!formulario.AceptoCondiciones.checked) {    
        alert('Debe ACEPTAR las CONDICIONES DE INSCRIPCIÓN para poder continuar.') 
        return false   
    }   
	
	if (confirm("Se va a inscribir en la carrera ¿Desea continuar?")) {
		document.forms[numform].action="inscripcionprocesar.asp";
		document.forms[numform].submit();
	}
} 




function MM_swapImgRestore() { //v3.0
  var i,x,a=document.MM_sr; for(i=0;a&&i<a.length&&(x=a[i])&&x.oSrc;i++) x.src=x.oSrc;
}

function MM_preloadImages() { //v3.0
  var d=document; if(d.images){ if(!d.MM_p) d.MM_p=new Array();
    var i,j=d.MM_p.length,a=MM_preloadImages.arguments; for(i=0; i<a.length; i++)
    if (a[i].indexOf("#")!=0){ d.MM_p[j]=new Image; d.MM_p[j++].src=a[i];}}
}

function MM_findObj(n, d) { //v4.01
  var p,i,x;  if(!d) d=document; if((p=n.indexOf("?"))>0&&parent.frames.length) {
    d=parent.frames[n.substring(p+1)].document; n=n.substring(0,p);}
  if(!(x=d[n])&&d.all) x=d.all[n]; for (i=0;!x&&i<d.forms.length;i++) x=d.forms[i][n];
  for(i=0;!x&&d.layers&&i<d.layers.length;i++) x=MM_findObj(n,d.layers[i].document);
  if(!x && d.getElementById) x=d.getElementById(n); return x;
}

function MM_swapImage() { //v3.0
  var i,j=0,x,a=MM_swapImage.arguments; document.MM_sr=new Array; for(i=0;i<(a.length-2);i+=3)
   if ((x=MM_findObj(a[i]))!=null){document.MM_sr[j++]=x; if(!x.oSrc) x.oSrc=x.src; x.src=a[i+2];}
}

