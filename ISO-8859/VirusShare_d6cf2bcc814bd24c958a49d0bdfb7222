}

function CarritoDelproductoRefrescar(ElementoID,nombre,presentacion,precio,form) {

	alert("Ha eliminado todas las unidades de '" + nombre + "' del carrito");
	window.frames["iframeCarrito"].location.href= "carrito.php?ElementoID="+ElementoID+"&Precio="+precio+"&MOD=DELPRODUCT";
	//window.location.reload();
	setTimeout('refrescar()',1000)

}




