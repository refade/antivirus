// JavaScript Document

function ConfirmarModificar(numform,direccion) {
	if (confirm("Se van a modificar los datos. ¿Desea continuar?")) {
		document.forms[numform].action=direccion;
	    document.forms[numform].submit()
		}
}

function SumarClickBanner(BannerID) {
	window.frames["SumarClick"].location.href= "SumarClick.asp?clickID="+BannerID;
}

function cerrarsesion() {   
       
	if (confirm("Se va a cerrar su sesión actual. Su pedido será eliminado. ¿Desea continuar?")) {
		window.location.href= "salir.php";
	}
} 


function Abrir_ventana_centrado(Url,NombreVentana,width,height,extras) {
	var largo = width;
	var altura = height;
	var adicionales= extras;
	var top = (screen.height-altura)/2;
	var izquierda = (screen.width-largo)/2; nuevaVentana=window.open(''+ Url + '',''+ NombreVentana + '','width=' + largo + ',height=' + altura + ',top=' + top + ',left=' + izquierda + ',features=' + adicionales + '');
	nuevaVentana.focus();
}

//Función que despliega texto al hacer click
function cambiar(esto)
{

	vista=document.getElementById(esto).style.display;
	if (vista=='none')
		vista='block';
	else
		vista='none';

	document.getElementById(esto).style.display = vista;
}


function CarritoAdd(ElementoID,unidades,nombre,presentacion,precio,form) {
var error = 0;
if (isNaN(unidades)){
	error = 1; 
	alert ('La cantidad introducida no es válida.');
	return false
}
if(unidades <= 0) {  
	error = 1;  
    alert('La cantidad introducida no es válida.');   
    return false   
} 
if(error == 0){
	alert("Ha añadido " + unidades + " " + presentacion  + " '" + nombre + "' al carrito de compra");
//	alert("carrito.php?ElementoID="+ElementoID+"&unidades="+unidades+"&ElementoPrecio="+precio+"&MOD=ADD");
	window.frames["iframeCarrito"].location.href= "carrito.php?ElementoID="+ElementoID+"&unidades="+unidades+"&Precio="+precio+"&MOD=ADD";
}


}


function CarritoAddRefrescar(ElementoID,unidades,nombre,presentacion,precio,form) {
var error3 = 0;

if (isNaN(unidades)){
	error3 = 1; 
	alert ('La cantidad introducida no es válida.');
	return false
}
if(unidades <= 0) {  
	error3 = 1;  
    alert('La cantidad introducida no es válida.');   
    return false   
} 
if(error3 == 0){
	alert("Ha añadido " + unidades + " " + presentacion  + " '" + nombre + "' al carrito de compra");
//	alert("carrito.php?ElementoID="+ElementoID+"&unidades="+unidades+"&ElementoPrecio="+precio+"&MOD=ADD");
	window.frames["iframeCarrito"].location.href= "carrito.php?ElementoID="+ElementoID+"&unidades="+unidades+"&Precio="+precio+"&MOD=ADD";
	//window.location.reload();
	setTimeout('refrescar()',1000)
}
}

   
   

function CarritoVaciar() {   
       
	if (confirm("Se va a vaciar su pedido actual. ¿Desea continuar?")) {
		location.href= "carrito.php?MOD=DELETEALL";
	}
} 
   
   
        
function CarritoDel(ElementoID,unidades,nombre,presentacion,form) {
var error2 = 0;

if (isNaN(unidades)){
	error2 = 1; 
	alert ('La cantidad introducida no es válida.');
	return false
}
if(unidades <= 0) {  
	error2 = 1;  
    alert('La cantidad introducida no es válida.');   
    return false   
} 
if(error2 == 0){
	alert("Ha eliminado " + unidades + " " + presentacion + " de '" + nombre + "' del carrito de compra");
	window.frames["iframeCarrito"].location.href= "carrito.asp?ElementoID="+ElementoID+"&unidades="+unidades+"&MOD=DEL";
}
	
}


function refrescar() {
	window.location.reload();
}

  
      
function CarritoDelRefrescar(ElementoID,unidades,nombre,presentacion,precio,form) {
var error4 = 0;

